<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="alpha_gazebo"
    params="
      prefix
      ee_prefix
      description_package
      namespace
      controllers_file">

    <!-- ros2_control -->
    <gazebo>
      <plugin filename="gz_ros2_control-system"
        name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <xacro:if value="${namespace != '/'}">
          <ros>
            <namespace>/${namespace[:-1]}</namespace>
          </ros>
          <robot_param_node>/${namespace}robot_state_publisher</robot_param_node>
        </xacro:if>
        <parameters>$(find ${description_package})/config/${controllers_file}</parameters>
      </plugin>
    </gazebo>

    <!-- Materials -->
    <gazebo reference="${prefix}base_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}ee_base_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}m1_link" />
    <gazebo reference="${prefix}m1_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}m2_1_1_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}m2_1_2_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}m2_joint_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}m3_inline_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}push_rod">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}${ee_prefix}base_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}${ee_prefix}rs1_130_link">
      <material>Gazebo/Gray</material>
    </gazebo>
    <gazebo reference="${prefix}${ee_prefix}rs1_139_link">
      <material>Gazebo/Gray</material>
    </gazebo>

  </xacro:macro>

</robot>
